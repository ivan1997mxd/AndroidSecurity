<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_small_app"
        android:layout_height="@dimen/icon_small_app"
        android:contentDescription="@string/iv_application_icon"
        android:paddingLeft="@dimen/padding_icon"
        android:paddingTop="@dimen/padding_text"
        android:paddingRight="@dimen/padding_icon"
        android:paddingBottom="@dimen/padding_text" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_text"
            android:text="Name"
            android:textSize="@dimen/large_font_list" />

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_text"
            android:text="version"
            android:textSize="@dimen/small_font_list" />

        <TextView
            android:id="@+id/score"
            style="@style/text_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_text"
            android:text="score"
            android:textSize="@dimen/small_font_list" />
    </LinearLayout>

    <ImageView
        android:id="@+id/score_icon"
        android:layout_width="@dimen/icon_score"
        android:layout_height="@dimen/icon_score"
        android:contentDescription="@string/iv_score_icon"
        android:paddingLeft="@dimen/padding_icon"
        android:paddingTop="@dimen/padding_text"
        android:paddingRight="@dimen/padding_icon"
        android:paddingBottom="@dimen/padding_text" />

</LinearLayout>