<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView android:id="@+id/icon_danger"
        android:contentDescription="@string/iv_danger_icon"
        android:layout_width="@dimen/icon_score"
        android:layout_height="@dimen/icon_score"
        android:padding="@dimen/padding_icon"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView android:id="@+id/permission_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_font_list"
            android:textStyle="bold"
            android:padding="@dimen/padding_text"/>
        <TextView android:id="@+id/permission_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font_list"
            android:paddingLeft="@dimen/padding_text"/>
        <TextView android:id="@+id/permission_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font_list"
            android:paddingLeft="@dimen/padding_text"/>

    </LinearLayout>

</LinearLayout>